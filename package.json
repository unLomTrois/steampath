{
    "name": "@unlomtrois/steampath",
    "version": "1.0.4",
    "main": "dist/index.js",
    "type": "module",
    "scripts": {
        "ci": "npm run lint && npm run format && npm run build && npm run test",
        "lint": "eslint src",
        "format": "prettier --write .",
        "build": "tsup",
        "test": "vitest",
        "test-ci": "vitest run --coverage",
        "check-exports": "attw --pack ."
    },
    "exports": {
        "./package.json": "./package.json",
        ".": {
            "import": "./dist/index.js",
            "default": "./dist/index.cjs"
        }
    },
    "files": [
        "dist",
        "package.json"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/unLomTrois/steampath"
    },
    "author": {
        "email": "vadim.kuz02@gmail.com",
        "name": "Vadim Kuznetsov",
        "url": "https://github.com/unlomtrois"
    },
    "engines": {
        "node": ">=20.0.0"
    },
    "license": "MIT",
    "description": "A library for searching steam installation paths",
    "devDependencies": {
        "@arethetypeswrong/cli": "^0.16.4",
        "@eslint/js": "^9.11.1",
        "@types/mock-fs": "^4.13.4",
        "@types/node": "^20.16.10",
        "eslint": "^9.11.1",
        "globals": "^15.10.0",
        "mock-fs": "^5.3.0",
        "prettier": "^3.3.3",
        "tsup": "^8.3.0",
        "typescript": "^5.6.2",
        "typescript-eslint": "^8.8.0",
        "vitest": "3.0.6",
        "@vitest/ui": "3.0.6",
        "@vitest/coverage-istanbul": "3.0.6"
    },
    "keywords": [
        "steam",
        "path",
        "search",
        "typescript"
    ]
}
